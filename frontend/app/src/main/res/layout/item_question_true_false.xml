<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/twTrueFalseQuestion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Da li je nebo plavo?"
        android:textSize="@dimen/true_false_text"
        android:textStyle="bold"
        android:textColor="#1A237E"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnTFTrue"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            style="@style/CustomButtonStyle"
            android:text="@string/true_button_text"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:background="@drawable/true_button_bg"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="14sp"
            android:autoSizeMaxTextSize="@dimen/true_false_buttons"
            android:stateListAnimator="@animator/expand_button"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnTFFalse"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            style="@style/CustomButtonStyle"
            android:text="@string/false_button_text"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:background="@drawable/false_button_bg"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="14sp"
            android:autoSizeMaxTextSize="@dimen/true_false_buttons"
            android:stateListAnimator="@animator/expand_button"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</LinearLayout>
